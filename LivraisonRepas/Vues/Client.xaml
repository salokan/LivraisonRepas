<Page
    x:Class="LivraisonRepas.Vues.Client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LivraisonRepas.Vues"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Commander" HorizontalAlignment="Left" Margin="1242,723,0,0" VerticalAlignment="Top" Click="ValiderClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="444,319,0,0" TextWrapping="Wrap" Text="Choix du menu :" VerticalAlignment="Top"/>
        <ListView x:Name="ListViewPanier" HorizontalAlignment="Left" Height="637" Margin="982,28,0,0" VerticalAlignment="Top" Width="374" BorderThickness="1" BorderBrush="White" CanReorderItems="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Ajouter" HorizontalAlignment="Left" Margin="650,371,0,0" VerticalAlignment="Top" Click="AjouterPanierClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="982,10,0,0" TextWrapping="Wrap" Text="Panier : " VerticalAlignment="Top"/>
        <TextBlock x:Name="username" HorizontalAlignment="Left" Margin="1307,10,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" RenderTransformOrigin="-0.378,-0.462"/>
        <TextBlock HorizontalAlignment="Left" Margin="444,264,0,0" TextWrapping="Wrap" Text="Choix du restaurant" VerticalAlignment="Top"/>
        <ComboBox x:Name="RestaurantBox" DisplayMemberPath="NomRestaurants" HorizontalAlignment="Left" Margin="444,282,0,0" VerticalAlignment="Top" Width="287" PlaceholderText="Choix du restaurant" SelectionChanged="RestaurantBox_SelectionChanged"/>
        <ComboBox x:Name="MenuBox" DisplayMemberPath="NomMenus" HorizontalAlignment="Left" Margin="444,337,0,0" VerticalAlignment="Top" Width="287" PlaceholderText="Choix du menu" />
        <TextBlock HorizontalAlignment="Left" Margin="982,670,0,0" TextWrapping="Wrap" Text="Prix total : " VerticalAlignment="Top"/>
        <TextBlock x:Name="PrixTotal" HorizontalAlignment="Left" Margin="1035,670,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Page>
